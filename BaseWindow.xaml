<Controls:MetroWindow x:Class="EPOS_V3.BaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
        xmlns:local="clr-namespace:EPOS_V3"
        mc:Ignorable="d"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="ECPay :: Điểm thu tiền điện - Phiên bản 3.0.0"
                      TitleCaps="False"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="1"
                      WindowTransitionsEnabled="False"                      
                      Height="{Binding SystemParameters.PrimaryScreenHeight}"
                      WindowStartupLocation="CenterScreen" Icon="Resources/edongnew.png" Loaded="MetroWindow_Loaded" WindowState="Maximized">
    <Controls:MetroWindow.Background>
        <ImageBrush ImageSource="Resources/background_login.jpg"/>
    </Controls:MetroWindow.Background>
    <Grid x:Name="RootGrid"/>
</Controls:MetroWindow>
